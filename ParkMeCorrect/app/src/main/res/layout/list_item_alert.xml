<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_background"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    >

    <TextView
        android:id="@+id/list_item_alert_carno_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        android:textColor="#000000"
        tools:text="Car No"/>

    <TextView
        android:id="@+id/list_item_alert_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_alert_carno_text_view"
        android:padding="4dp"
        tools:text="Alert Date"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/list_item_alert_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_alert_date_text_view"
        android:padding="4dp"
        tools:text="Alert Type"
        android:textColor="#000000"/>


</RelativeLayout>